@model IEnumerable<TransporteParticularWeb.Models.TransporteModels.Motorista>
@{
    ViewData["Title"] = "Index";
}

<h2>Motorista</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>

            <th>
                Sexo
            </th>

            <th>
                Numero Celular
            </th>
            <th>
                Email
            </th>

            <th>
                Data Cadastro
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeMotorista)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Sexo)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.NumeroCelular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DataCadastro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Mais Detalhes</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
