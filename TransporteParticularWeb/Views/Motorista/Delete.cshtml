@model TransporteParticularWeb.Models.TransporteModels.Motorista

@{
    ViewData["Title"] = "Delete";
}

<h2>Deletar</h2>

<h3>Voce realmente deseja deletar seu cadastro?</h3>
<div>
    <h4>Dados Motorista</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeMotorista)
        </dd>
        <dt>
            Data Nascimento:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt>
            Sexo:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sexo)
        </dd>
        <dt>
            CPF:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt>
            Numero Celular:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumeroCelular)
        </dd>
        <dt>
            Email:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Data Cadastro:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
        <dt>
            Carteira de Motorista:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CarteiraMotorista)
        </dd>
        <dt>
            Status:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index">Voltar</a>
    </form>
</div>
